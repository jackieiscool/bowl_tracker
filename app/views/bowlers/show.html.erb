<div id="main_page" class="container">
  <div class="panel-group" id="accordion">
    
    <div class="panel panel-default">
      
      <div class="panel-heading">
        <h4 class="panel-title accordianTitle">
          <a class="accordion-toggle accordianTitle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
            Stats
          </a>
        </h4>
      </div>

      <div id="collapseOne" class="panel-collapse collapse">
        <div class="panel-body">
          <div class="info" >
            <ul class="average"> 
            	<li>
            		Average: <%= @bowler.average %>
            	</li>
            	<li>
            		Best Game: <%= @bowler.best %>
            	</li>
            	<li>
            		Worst Game: <%= @bowler.worst %>
            	</li>
            	<li>
            		Last Game: <%= @bowler.individual_games.last.score %>
            	</li>
						</ul>
          </div>
        </div>

      </div>
    </div>

    <div class="panel panel-default">

      <div class="panel-heading">
        <h4 class="panel-title accordianTitle">
          <a class="accordion-toggle accordianTitle" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
            New Game
          </a>
        </h4>
      </div>

      <div id="collapseTwo" class="panel-collapse collapse">
        <div class="panel-body">
         	<div>
          	<div id="form">
            	<h5> New Game</h5>
            	<%= form_for @game do |f| %>
								<%= f.fields_for :frames do |d| %>
									<%= d.label :frame_1 %>
									<%= d.text_field :frame_1_a %>
									<%= d.text_field :frame_1_b %>
									<%= d.label :frame_2 %>
									<%= d.text_field :frame_2_a %>
									<%= d.text_field :frame_2_b %>
									<%= d.label :frame_3 %>
									<%= d.text_field :frame_3_a %>
									<%= d.text_field :frame_3_b %>
									<%= d.label :frame_4 %>
									<%= d.text_field :frame_4_a %>
									<%= d.text_field :frame_4_b %>
									<%= d.label :frame_5 %>
									<%= d.text_field :frame_5_a %>
									<%= d.text_field :frame_5_b %>
									<%= d.label :frame_6 %>
									<%= d.text_field :frame_6_a %>
									<%= d.text_field :frame_6_b %>
									<%= d.label :frame_7 %>
									<%= d.text_field :frame_7_a %>
									<%= d.text_field :frame_7_b %>
									<%= d.label :frame_8 %>
									<%= d.text_field :frame_8_a %>
									<%= d.text_field :frame_8_b %>
									<%= d.label :frame_9 %>
									<%= d.text_field :frame_9_a %>
									<%= d.text_field :frame_9_b %>
									<%= d.label :frame_10 %>
									<%= d.text_field :frame_10_a %>
									<%= d.text_field :frame_10_b %>
									<%= d.text_field :frame_10_c %>
									<% end %>
								<%= f.label :final_score %>
								<%= f.text_field :score %>
								<%= hidden_field_tag :bowler_id, current_bowler.id %>
								<%= f.submit %>
							<% end %>
        		</div>
        	</div>
      	</div>
    	</div>

  	</div>
  
  	<div class="panel panel-default">
   		<div class="panel-heading">
      <h4 class="panel-title accordianTitle">
        <a class="accordion-toggle accordianTitle" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
          Join New Team
        </a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse">
      <div class="panel-body">
        <div id='form'>
          <%= form_for @team do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.submit %>
          <% end %>
        </div>
	    </div>
	  </div>

	</div>
</div>




%h1
	= @bowler.name

.info
	%ul.average
		%li
			Average: 
			= @bowler.average
		%li
			Best Game:
			= @bowler.best
		%li
			Worst Game:
			= @bowler.worst
		%li
			/ Last Game:
			/ = @bowler.individual_games.last.score

%div.teams
	%h2 My Teams:
	%ul
		- @bowler.teams.each do |t|
			%li 
				= link_to t.name, team_path(t.id)
	
	%button.create_team Join New Team
	%button.hide_team Hide

	%div.team_form
		= form_for @team do |f|
			= f.label :name
			= f.text_field :name
			= hidden_field_tag :id, current_bowler.id
			= f.submit

%button.new_game New Game
%button.hide_game Hide

%div.game_form
	= form_for @game do |f|
		= f.fields_for :frames do |d|
			= d.label :frame_1
			= d.text_field :frame_1_a
			= d.text_field :frame_1_b
			= d.label :frame_2
			= d.text_field :frame_2_a
			= d.text_field :frame_2_b
			= d.label :frame_3
			= d.text_field :frame_3_a
			= d.text_field :frame_3_b
			= d.label :frame_4
			= d.text_field :frame_4_a
			= d.text_field :frame_4_b
			= d.label :frame_5
			= d.text_field :frame_5_a
			= d.text_field :frame_5_b
			= d.label :frame_6
			= d.text_field :frame_6_a
			= d.text_field :frame_6_b
			= d.label :frame_7
			= d.text_field :frame_7_a
			= d.text_field :frame_7_b
			= d.label :frame_8
			= d.text_field :frame_8_a
			= d.text_field :frame_8_b
			= d.label :frame_9
			= d.text_field :frame_9_a
			= d.text_field :frame_9_b
			= d.label :frame_10
			= d.text_field :frame_10_a
			= d.text_field :frame_10_b
			= d.text_field :frame_10_c
		= f.label :final_score
		= f.text_field :score
		= hidden_field_tag :bowler_id, current_bowler.id
		= f.submit



